<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{if receptek.knev "has-error"}}">
            <label for="knev" class="col-lg-2 control-label">Étel neve</label>
            <div class="col-lg-10">
                <input class="form-control" id="knev" name="knev" placeholder="pl. bableves, pizza, krumplifőzelék" type="text" value="{{data.knev}}">
                <span class="help-block">{{receptek.knev}}</span>
            </div>
        </div>
        <div class="form-group {{if receptek.kategoria "has-error"}}">
            <label for="kategoria" class="col-lg-2 control-label">Kategória</label>
            <div class="col-lg-10">
                <input class="form-control" id="kategoria" name="kategoria" placeholder="pl. leves, főétel, előétel" type="text" value="{{data.kategoria}}">
                <span class="help-block">{{receptek.kategoria}}</span>
            </div>
        </div>
        <div class="form-group {{if receptek.description "has-error"}}">
            <label for="description" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="description" name="description">{{data.description}}</textarea>
                <span class="help-block">{{receptek.description}}</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button {{action "submit"}} class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>        